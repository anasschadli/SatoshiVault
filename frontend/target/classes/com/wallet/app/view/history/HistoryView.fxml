<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wallet.app.controller.HistoryController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <Label text="Transaction History">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>
    
    <!-- Search Bar -->
    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Search transactions..." prefWidth="400.0" HBox.hgrow="ALWAYS" />
        <Button fx:id="clearButton" onAction="#handleClearFilters" text="Clear" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: normal; -fx-opacity: 0.6;" />
    </HBox>
    
    <!-- Filters -->
    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Button fx:id="filterAll" onAction="#handleFilterAll" text="All" />
        <Button fx:id="filterSent" onAction="#handleFilterSent" text="Sent" />
        <Button fx:id="filterReceived" onAction="#handleFilterReceived" text="Received" />
        <Button fx:id="filterPending" onAction="#handleFilterPending" text="Pending" />
        <DatePicker fx:id="datePicker" promptText="Filter by date" />
    </HBox>
    
    <!-- Transaction List -->
    <ListView fx:id="transactionList" prefHeight="400.0" VBox.vgrow="ALWAYS" />
</VBox>
