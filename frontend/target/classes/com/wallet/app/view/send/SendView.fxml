<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wallet.app.controller.SendController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <Label text="Send Bitcoin">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>
    
    <!-- Amount Input -->
    <VBox spacing="10.0">
        <Label text="Amount (BTC)">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <TextField fx:id="amountField" promptText="0.00000000" prefWidth="300.0" />
            <Button onAction="#handleMaxAmount" text="Max" />
        </HBox>
        <Label fx:id="balanceInfoLabel" text="Balance: 0.15234567 BTC | Max: 0.15234567 BTC" />
        <Label fx:id="amountUSDLabel" text="â‰ˆ $0.00 USD" />
    </VBox>
    
    <!-- Recipient Address -->
    <VBox spacing="10.0">
        <Label text="Recipient Address">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <TextField fx:id="recipientField" promptText="Enter Bitcoin address" prefWidth="400.0" />
            <Button onAction="#handleScanQR" text="Scan QR" />
        </HBox>
    </VBox>
    
    <!-- Network Fee -->
    <VBox spacing="5.0">
        <Label text="Network Fee">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Label fx:id="networkFeeLabel" text="Fee: 0.00001000 BTC" />
        <Label fx:id="confirmationTimeLabel" text="Estimated confirmation time: ~10 minutes" />
    </VBox>
    
    <!-- Review Button -->
    <Button onAction="#handleReviewTransaction" text="Review Transaction" prefWidth="200.0" defaultButton="true">
        <font>
            <Font size="14.0" />
        </font>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Button>
    
    <Label fx:id="errorLabel" styleClass="error-label" visible="false" />
</VBox>
