<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wallet.app.controller.AuthController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    
    <Label text="Bitcoin Wallet">
        <font>
            <Font name="System Bold" size="32.0" />
        </font>
    </Label>
    
    <Label text="Enter your Secret Recovery Phrase to unlock">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    
    <TextField fx:id="recoveryPhraseField" promptText="Enter recovery phrase" prefWidth="400.0">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
    </TextField>
    
    <Button fx:id="unlockButton" onAction="#handleUnlock" text="Unlock Wallet" defaultButton="true" prefWidth="400.0">
        <font>
            <Font size="14.0" />
        </font>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Button>
    
    <Label fx:id="errorLabel" styleClass="error-label" visible="false">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Label>
</VBox>
