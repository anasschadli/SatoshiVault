<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wallet.app.controller.NavigationController">
    <center>
        <BorderPane fx:id="contentPane" />
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="10.0" styleClass="bottom-nav">
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>
            
            <Button fx:id="homeButton" text="Home" prefWidth="150.0" />
            <Button fx:id="sendButton" text="Send" prefWidth="150.0" />
            <Button fx:id="receiveButton" text="Receive" prefWidth="150.0" />
            <Button fx:id="historyButton" text="History" prefWidth="150.0" />
            <Button fx:id="settingsButton" text="Settings" prefWidth="150.0" />
        </HBox>
    </bottom>
</BorderPane>
